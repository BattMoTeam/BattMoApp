{
    "$id": "file://./model_template.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "model_template object",
    "type": "object",
    "required":["name", "is_material","is_cell_type", "parameters"],
    "properties": {
        "name": {
            "type": "string",
            " description": "The name of the template"
        },
        "is_material": {
            "type": "bool",
            "description":"Whether the template represents a material or not.",
            "enum": [true, false]
        },
        "is_cell_type": {
            "type": "bool",
            "description":"Whether the template represents a cell type or not.",
            "enum": [true, false]
        },
        "parameters":{
            "type": "dict",
            "description": "A dict with parameters and their meta data.",
            "additionalProperties": false,
            "minProperties": 4,
            "properties":{
                "use_thermal":{
                    "$ref": "parameter.schema.json"
                },
                "include_current_collector":{
                    "$ref": "parameter.schema.json"
                },
                "use_solid_diffusion_model":{
                    "$ref": "parameter.schema.json"
                },
                "solid_diffusion_model_type":{
                    "$ref": "parameter.schema.json"
                }
                
            }
    }   }
}