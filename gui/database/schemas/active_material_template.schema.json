{
    "$id": "file://./active_material_template.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "active_material_template object",
    "type": "object",
    "required":["name", "is_material","is_cell_type", "parameters"],
    "properties": {
        "name": {
            "type": "string",
            " description": "The name of the template"
        },
        "is_material": {
            "type": "bool",
            "description":"Whether the template represents a material or not.",
            "enum": [true, false]
        },
        "is_cell_type": {
            "type": "bool",
            "description":"Whether the template represents a cell type or not.",
            "enum": [true, false]
        },
        "parameters":{
            "type": "dict",
            "description": "A dict with parameters and their meta data.",
            "additionalProperties": false,
            "minProperties": 15,
            "properties":{
                "maximum_concentration":{
                    "$ref": "parameter.schema.json"
                },
                "volumetric_surface_area":{
                    "$ref": "parameter.schema.json"
                },
                "density":{
                    "$ref": "parameter.schema.json"
                },
                "specific_heat_capacity":{
                    "$ref": "parameter.schema.json"
                },
                "thermal_conductivity":{
                    "$ref": "parameter.schema.json"
                },
                "electronic_conductivity":{
                    "$ref": "parameter.schema.json"
                },
                "number_of_electrons_transferred":{
                    "$ref": "parameter.schema.json"
                },
                "activation_energy_of_reaction":{
                    "$ref": "parameter.schema.json"
                },
                "reaction_rate_constant":{
                    "$ref": "parameter.schema.json"
                },
                "maximum_lithium_stoichiometry":{
                    "$ref": "parameter.schema.json"
                },
                "minimum_lithium_stoichiometry":{
                    "$ref": "parameter.schema.json"
                },
                "activation_energy_of_diffusion":{
                    "$ref": "parameter.schema.json"
                },
                "diffusion_pre_exponential_factor":{
                    "$ref": "parameter.schema.json"
                },
                "particle_radius":{
                    "$ref": "parameter.schema.json"
                },
                "open_circuit_potential":{
                    "$ref": "parameter.schema.json"
                }
            }
        }
    }
}